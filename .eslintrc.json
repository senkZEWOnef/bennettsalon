{
  "root": true,
  "env": { "browser": true, "es2020": true },
  "extends": ["eslint:recommended"],
  "ignorePatterns": ["dist", ".eslintrc.json"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}