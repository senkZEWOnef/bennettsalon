# Bennett Salon - Environment Configuration Template
# Copy this file to .env and fill in the actual values

# Database Configuration (Required for production)
# Get this from your Neon dashboard: https://neon.tech
DATABASE_URL="postgresql://username:password@host:5432/database_name"
VITE_DATABASE_URL="postgresql://username:password@host:5432/database_name"

# ATH Móvil Configuration (Required for payments)
# Get your business token from ATH Móvil Business Portal
# For testing, you can use "sandbox" but replace with real token for production
VITE_ATHM_BUSINESS_TOKEN="your_athm_business_token_here"

# Development/Testing values (remove in production):
# VITE_ATHM_BUSINESS_TOKEN="sandbox"

# Additional Configuration
NODE_ENV="production"